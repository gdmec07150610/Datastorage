<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.s07150610.datastorage.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账号:" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edittext1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码:" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edittext2" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView" />
    </LinearLayout>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sharedPreferences写入"
        android:id="@+id/spRead"
        android:onClick="spWrite" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sharedPreferences读取"
        android:id="@+id/spWrite"
        android:onClick="spRead" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ROM写入"
        android:id="@+id/romWrite"
        android:onClick="ROMWrite" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ROM读取"
        android:id="@+id/romRead"
        android:onClick="ROMRead" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SD写入"
        android:id="@+id/SDWrite"
        android:onClick="SDWrite" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SD读取"
        android:id="@+id/SDRead"
        android:onClick="SDRead" />
</LinearLayout>
